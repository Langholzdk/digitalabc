<!DOCTYPE html>
<html data-ng-app="abcApp">
<head>
    <title>Digital ABC</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    {% block metatags %}{% endblock %}
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/fonts/bebas/bebas.css">
</head>
<body data-ng-controller="HeaderController">
    <nav class="nav" data-ng-class="{'open': menuOpen !== null && menuOpen, 'close': menuOpen !== null && !menuOpen}">
        <div title="Menu" class="nav--menu" data-ng-click="toggleMenu()">
            <img class="nav--menu-image" src="/images/menu.png">
        </div>
        <div class="nav--inner">
            123
        </div>
    </nav>

    <header class="header" role="banner">
        <div class="header--inner">
            <a href="/" title="Digital ABC" class="header--logo"><img src="/images/logo.png"></a>
            <div title="Menu" class="header--menu" data-ng-click="toggleMenu()">
                <img class="header-menu-image" src="/images/menu.png">
            </div>
        </div>
    </header>

    {% block body %}{% endblock %}

    <!-- Global script imports -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/main/controllers.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
